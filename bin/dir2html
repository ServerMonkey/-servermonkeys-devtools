#!/bin/sh
#info: Create a simple HTML index from current directory
TITLE="$1"
tree -H '.' -L 1 --noreport --dirsfirst -T "$TITLE" -s -D --charset utf-8 |
	sed 's:├── ::g' | sed 's:└── ::g' |
	sed 's:>.<:>..<:g' |
	sed '/>index.html</d' | sed '/GENERATOR</d' |
	tr '\n' '@' | sed 's;<hr>.*</p>;;g' | tr '@' '\n' >index.html
